<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#969FE9"

    tools:context=".giveBook">

    <Button
        android:id="@+id/menu_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="664dp"
        android:text="Menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/give_book_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"

        android:layout_marginStart="40dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/rectangle1"
        android:fontFamily="@font/poppins"
        android:hint="Book name"
        android:padding="30dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/give_book_description"
        android:layout_width="322dp"
        android:layout_height="238dp"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"

        android:layout_marginStart="40dp"
        android:layout_marginTop="159dp"
        android:background="@drawable/big_rectangle"
        android:fontFamily="@font/poppins"
        android:hint="Book description"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <Button
        android:id="@+id/give_away"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="52dp"
        android:text="Give away" />

    <Spinner
        android:id="@+id/city_list_dropdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="227dp"
        android:background="@drawable/rectangle1"
        android:padding="30dp"
        android:spinnerMode="dropdown" />
</RelativeLayout>