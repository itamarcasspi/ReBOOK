<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_back"
    tools:context=".signup">


    <TextView
        android:id="@+id/ReBOOK"
        android:layout_width="163dp"
        android:layout_height="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/logo"

        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/rectangle1"
        android:fontFamily="@font/poppins"
        android:hint="Email"
        android:layout_below="@id/ReBOOK"

        android:padding="25dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        tools:layout_editor_absoluteX="27dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/email"

        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle1"
        android:fontFamily="@font/poppins"
        android:hint="Password"
        android:padding="25dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle1"
        android:fontFamily="@font/poppins"
        android:hint="First name"
        android:padding="25dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/first_name"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="0dp"
        android:background="@drawable/rectangle1"
        android:fontFamily="@font/poppins"
        android:hint="Phone number"
        android:padding="25dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/phone_number"
        android:layout_alignParentEnd="true"

        android:layout_centerHorizontal="true"


        android:layout_marginTop="0dp"
        android:layout_marginEnd="27dp"
        android:background="@drawable/rectangle1"
        android:fontFamily="@font/poppins"
        android:padding="25dp"
        android:text="SIGN ME UP"
        android:textColor="#495FEA"
        android:textStyle="bold"
        app:backgroundTint="#E5E5E5" />

    <TextView
        android:id="@+id/terms"
        android:layout_width="wrap_content"
        android:layout_height="27dp"

        android:layout_below="@id/signin_refferal"
        android:layout_centerHorizontal="true"

        android:clickable="false"
        android:fontFamily="@font/poppins"
        android:longClickable="false"
        android:text="By signing up you declare that you have read and agree with the ReBook's"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signin_refferal"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_below="@+id/signup_btn"

        android:layout_centerHorizontal="true"



        android:background="?android:attr/selectableItemBackground"
        android:text="Already have an account? Sign in!"
        android:textColor="#D9C8F8" />

    <Button
        android:id="@+id/terms_refferal"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/terms"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="50dp"
        android:background="?android:attr/selectableItemBackground"
        android:text="terms of service"
        android:textColor="#D9C8F8"
        android:textSize="8sp" />


</RelativeLayout>